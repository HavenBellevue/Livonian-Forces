        <Classes>
			<!--
				'name' links to a human defined in seals_humans.xml
				'nameUI' is the localized version that shows up in the game's UI, therefore it's not unique
			-->
            <Class name="TokarevLIVCRU"  nameUI="CRU" 	numSlots="1" supply="100" iconTex="data/textures/gui/deploy/class_icon_blackops.dds" upgrades="BH_Defence1, BH_Offence1, BH_Defence2, BH_Offence2" maxUpgradeable="2"/>
